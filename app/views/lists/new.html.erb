<div class="container">
  <div class="row">
    <div class="col-md-4">
      <p>Some examples of types of lists</p>
      <ul>
        <li>Groceries</li>
        <li>Work wish list</li>
        <li>Chores to do at home</li>
        <li>School Assignments</li>
        <li>Meeting subjects</li>
    </div>
  </div>


      <div class="col-md-8">
        <%= form_for @list do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter list name" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter list description" %>
      </div>
      <div class="form-group">
        <%= f.label :public, class: 'checkbox' do %>
          <%= f.check_box :public %> Public list
        <% end %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
      </div>


</div>
