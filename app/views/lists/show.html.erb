

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @list.name %></h1>
      <%= link_to "Edit", edit_list_path, class: 'btn btn-success' %>
      <%= link_to "Delete List", @list, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you would like to delete this list?'} %>

       </div>
     </div>
     <div class="media">
       <div class="media-body">
         <% @list.items.each do |item| %>
         <h4 class="media-heading">
           <%= link_to item.title, list_item_path(@list, item) %>
         </h4>

         <div class="form-group">
           <%= f.label :public, class: 'checkbox' do %>
             <%= f.check_box :public %> Public list
           <% end %>
           <% end %>
       </div>
     </div>

  <div class="col-md-4">
    <%= link_to "New Item", new_list_item_path(@list), class: 'btn btn-success' %>
    <!-- <%= link_to "Delete list", @list, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } %> -->
  </div>

</div>
